<div id="drop_zone">

  <div class="row">
    <div class="col-md-3 hidden-sm hidden-xs">
      <span class="drop-label">
        <span class="glyphicon glyphicon-download-alt"></span> Drop files here
      </span>
    </div>

  <div class="col-md-3 col-sm-4 col-xs-12">
    <input type="file" name="file" id="upload_files" class="input_files" accept="image/*" multiple/>
    <label for="upload_files" id="upload_files_label" class="btn btn-primary btn-lg"><span class="glyphicon glyphicon-folder-open"></span>&nbsp;&nbsp;Browse images</label>
  </div>

  <div class="col-md-6 col-sm-8 hidden-xs">
    <div class="input-group input-group-lg">
      <input type="text" placeholder="Paste link" class="form-control" id="paste_url" />
      <span class="input-group-btn">
        <button type="button" class="btn btn-primary" id="paste_url_button"><span class="glyphicon glyphicon-globe"></span> Upload from Web</button>
      </span>
    </div>
  </div>

  </div>

</div>