<h1>Upload Image</h1>
<div>

  <form action="/upload" method="post" enctype="multipart/form-data">

    <div class="row" id="preview_files"></div>


    <div id="drop_zone">
      <p>Drop files here</p>
      <p>OR</p>

      <input type="file" name="file" id="upload_files" class="input_files" accept="image/*" multiple/>
      <label for="upload_files" id="upload_files_label" class="btn btn-default"><span class="glyphicon glyphicon-file"></span>
        Choose files to upload</label>
    </div>

    <button type="submit" class="btn btn-default hidden" id="upload_button">
      <span class="glyphicon glyphicon-upload"></span> Upload
    </button>

      <a href="/" class="btn btn-default hidden" id="new_upload_button">
        <span class="glyphicon glyphicon-upload"></span> New Upload
      </a>

  </form>

</div>

