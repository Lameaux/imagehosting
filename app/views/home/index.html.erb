<h1>Upload Image</h1>

<div>

  <form action="/upload" method="post" enctype="multipart/form-data">
    <div class="well-sm upload_button_well hidden">

      <a href="/" class="btn btn-default hidden" id="new_upload_button">
        <span class="glyphicon glyphicon-cloud-upload"></span> New Upload
      </a>

      <button type="submit" class="btn btn-default" id="upload_button">
        <span class="glyphicon glyphicon-cloud-upload"></span> Upload
      </button>
    </div>

    <div class="row" id="preview_files"></div>


    <div id="drop_zone">
      <p><span class="glyphicon glyphicon-download-alt"></span> Drop files here</p>
      <p>OR</p>

      <input type="file" name="file" id="upload_files" class="input_files" accept="image/*" multiple/>
      <label for="upload_files" id="upload_files_label" class="btn btn-default"><span class="glyphicon glyphicon-file"></span>
        Choose files to upload</label>
      <p></p>
      <p>OR</p>
      <input type="text" placeholder="Paste an URL"  id="paste_url" />
      <button type="button" class="btn btn-default" id="paste_url_button"><span class="glyphicon glyphicon-globe"></span> Upload from URL</button>

    </div>

  </form>



</div>

