<%= render 'shared/single_image' %>

<div class="image-footer text-center next-bottom">
  <a class="btn btn-success btn-lg" href="<%= @next_post_id %>">Next Image <span class="glyphicon glyphicon-chevron-right"></span></a>
</div>

<div id="disqus_thread" class="image-footer"></div>
<script>
  var disqus_config = function () {
    this.page.url = '<%= @page.base_url %><%= @page.url %>';
    this.page.identifier = '<%= @image.short_id %>';
  };

  (function() { // DON'T EDIT BELOW THIS LINE
    var d = document, s = d.createElement('script');
    s.src = '//pngif-com.disqus.com/embed.js';
    s.setAttribute('data-timestamp', +new Date());
    (d.head || d.body).appendChild(s);
  })();
</script>
<noscript>Please enable JavaScript to view the <a href="https://disqus.com/?ref_noscript">comments powered by Disqus.</a></noscript>

