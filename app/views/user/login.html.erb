<div>
  <h1 class="text-center">Log in</h1>
  <h4 class="text-center">Don't have an account? <a class="btn btn-lg btn-primary" href="/register">Register</a></h4>

  <%= form_tag '/login' do %>

    <% if @form_username_email %>
    <div class="row">
      <div class="form-group col-md-6 col-md-offset-3">
        Invalid username/email or password.
      </div>
    </div>
    <% end %>

    <div class="row">
      <div class="form-group form-group-lg col-md-6 col-md-offset-3">
        <label for="username_email">Username or Email</label>
        <%= text_field_tag :username_email, @form_username_email, class: 'form-control', placeholder: 'Username or Email', autofocus: 'autofocus', maxlength:255 %>
      </div>
    </div>

    <div class="row">
      <div class="form-group form-group-lg col-md-6 col-md-offset-3">
        <label for="password">Password</label>
        <%= password_field_tag :password, '', class: 'form-control', placeholder: 'Password', maxlength:255 %>
      </div>
    </div>

    <div class="row text-right">
      <div class="form-group col-md-6 col-md-offset-3">
        <b><a href="/reset-password">Forgot password?</a></b>
      </div>
    </div>

    <div class="row">
      <div class="form-group col-md-6 col-md-offset-3">
        <button type="submit" class="btn btn-lg btn-danger col-xs-12">Log in</button>
      </div>
    </div>
    <% if false %>
      <div class="text-center or-facebook">OR</div>

      <div class="row">
        <div class="form-group col-md-6 col-md-offset-3">
          <a href="/login-facebook" class="btn btn-lg btn-primary col-xs-12">Log in with Facebook</a>
        </div>
      </div>
    <% end %>

  <% end %>
</div>
