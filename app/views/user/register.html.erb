<div>
  <h1 class="text-center">Register</h1>
  <h4 class="text-center">Already have an account? <a class="btn btn-lg btn-primary" href="/login">Login</a></h4>

  <%= form_for @user, url: { action: 'register_post' }, html: { class: 'register_form' } do |f| %>

    <% if @user.errors.any? %>
      <div class="row">
        <div class="form-group form-group-lg col-md-6 col-md-offset-3">
          <h4>Please fix the following errors:</h4>
          <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      </div>
    <% end %>

    <div class="row">
      <div class="form-group form-group-lg col-md-6 col-md-offset-3">
        <label for="user_username">Username</label>
        <%= f.text_field(:username, { class: 'form-control', placeholder: 'Username', maxlength:255 }) %>
      </div>
    </div>

    <div class="row">
      <div class="form-group form-group-lg col-md-6 col-md-offset-3">
        <label for="user_email">Email</label>
        <%= f.text_field(:email, { class: 'form-control', placeholder: 'Email', maxlength:255 }) %>
      </div>
    </div>

    <div class="row">
      <div class="form-group form-group-lg col-md-6 col-md-offset-3">
        <label for="user_password">Password</label>
        <%= f.password_field(:password, { class: 'form-control', placeholder: 'Password', maxlength:255 }) %>
      </div>
    </div>

    <div class="row">
      <div class="form-group form-group-lg col-md-6 col-md-offset-3">
        <label for="user_password_confirmation">Password confirmation</label>
        <%= f.password_field(:password_confirmation, { class: 'form-control', placeholder: 'Retype Password', maxlength:255 }) %>
      </div>
    </div>

    <div class="row text-right">
      <div class="form-group col-md-6 col-md-offset-3">
      </div>
    </div>

    <div class="row">
      <div class="form-group col-md-6 col-md-offset-3">
        By registering you agree to our <b><a href="terms">terms of service</a></b>.
      </div>
    </div>

    <div class="row text-right">
      <div class="form-group col-md-6 col-md-offset-3">
      </div>
    </div>

    <div class="row">
      <div class="form-group col-md-6 col-md-offset-3">
        <button type="submit" class="btn btn-lg btn-danger col-xs-12">Register</button>
      </div>
    </div>

  <% end %>
</div>
