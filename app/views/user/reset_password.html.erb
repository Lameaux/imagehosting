<div>
  <h1 class="text-center">Reset password</h1>
  <h4 class="text-center">Back to login page? <a class="btn btn-lg btn-primary" href="/login">Login</a></h4>

  <%= form_tag '/reset-password' do %>

    <% if @form_username_email %>
      <div class="row">
        <div class="form-group col-md-6 col-md-offset-3">
          Invalid Username or Email.
        </div>
      </div>
    <% end %>

    <div class="row">
      <div class="form-group form-group-lg col-md-6 col-md-offset-3">
        <label for="username_email">Username or Email</label>
        <%= text_field_tag :username_email, @form_username_email, class: 'form-control', placeholder: 'Username or Email', maxlength:255, autofocus: 'autofocus' %>
      </div>
    </div>

    <div class="row">
      <div class="form-group col-md-6 col-md-offset-3">
        Enter your Username or Email here, then check your inbox for a link to reset your password.
      </div>
    </div>

    <div class="row text-right">
      <div class="form-group col-md-6 col-md-offset-3">
      </div>
    </div>

    <div class="row">
      <div class="form-group col-md-6 col-md-offset-3">
        <button type="submit" class="btn btn-lg btn-danger col-xs-12">Reset password</button>
      </div>
    </div>

  <% end %>
</div>
